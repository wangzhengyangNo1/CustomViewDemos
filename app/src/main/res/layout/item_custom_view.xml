<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardBackgroundColor="@color/card_view_bg_dark"
    card:cardElevation="3dp"
    card:cardCornerRadius="3dp"
    card:cardPreventCornerOverlap="true"
    card:cardUseCompatPadding="true"
    card:contentPadding="6dp"
    >

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:padding="6dp"
        android:text="自定义控件"
        android:textSize="@dimen/size_item_text"
        android:elevation="2dp"
        android:shadowDy="3"
        android:shadowDx="3"
        android:shadowColor="@color/whitesmoke"
        android:shadowRadius="3"
        android:gravity="center"
        />

</android.support.v7.widget.CardView>